<!-- box::shiny -->
	<primitive name="sphere" type="shiny">
		<![CDATA[
shader {
	name "shader{uid}"
	type shiny
	diff { "sRGB nonlinear" {r} {g} {b} }
	refl 0.5
}

object {
	shader "shader{uid}"
	type sphere
	c {cx} {cy} {cz}
	r {rad}
}
		]]>
	</primitive>

<!-- box::diffuse -->
	<primitive name="sphere" type="diffuse">
